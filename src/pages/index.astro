---
// Component imports
import { Layout } from "@globals"
import Logo from "@img/logo.png"
import Logox from "@img/email_icon.png"
import Countdown from '../components/Countdown.jsx'
---

<Layout title="Collectif des volontaires du Senegal">
	<section class="p-6 flex-1 flex flex-col justify-between">
		<!-- Welcome -->
		<div
			class="max-w-xl mx-auto flex flex-col justify-center flex-1 space-y-10"
		>
			<div class="space-y-2 text-center">
				<p class="italic">
					<img src={Logo} alt="logo"/>
				</p>
				<Countdown client:load/>
			</div>
		</div>

		<!-- Twitter -->
		<div class="flex justify-center">
			<a
				href="mailto:volontariat@codevsn.org"
				target="_blank"
				rel="noopener noreferrer"
				class="relative inline-flex items-center rounded-full bg-gray-100 p-4 transition duration-300 ease-in-out hover:-translate-y-2 focus:-translate-y-2 group hover:text-white focus:text-white"
			>
				<div class="flex items-center space-x-4 relative z-10">
					<img
						src={Logox}
						width={48}
						height={48}
						class="rounded-full object-cover"
						alt=""
					/>
					<span class="text-lg font-bold">Contact</span>
				</div>
				<div
					class="inline-block rounded-full absolute inset-0 bg-gradient-to-tr from-[#07f49e] to-[#42047e] opacity-0 group-hover:opacity-100 group-focus:opacity-100 duration-300 ease-in-out transition"
				>
				</div>
			</a>
		</div>
	</section>
</Layout>
